<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<web:page title="Home"/>
	<object class="GtkBox" id="body">
		<property name="orientation">horizontal</property>
		<property name="halign">start</property>
		<child>
			<object class="GtkStackSidebar" id="sidebar">
				<property name="stack">stack</property>
			</object>
		</child>
		<child>
			<object class="GtkStack" id="stack">
				<child>
					<object class="GtkStackPage">
						<property name="name">home</property>
						<property name="title">Home</property>
						<property name="child">
							<object class="GtkLabel">
								<property name="label">Welcome to my home page!</property>
							</object>
						</property>
					</object>
				</child>

				<child>
					<object class="GtkStackPage">
						<property name="name">blog</property>
						<property name="title">Blog</property>
						<property name="child">
							<object class="GtkBox">
								<property name="orientation">vertical</property>
								{{#each posts}}
								<child>
									<object class="GtkLabel">
										<property name="label">{{this}}</property>
									</object>
								</child>
								#{{/each}}
							</object>
						</property>
					</object>
				</child>

				<child>
					<object class="GtkStackPage">
						<property name="name">about</property>
						<property name="title">About Me</property>
						<property name="child">
							<object class="GtkLabel">
								<property name="label">Here is more information about me.</property>
							</object>
						</property>
					</object>
				</child>
			</object>
		</child>
	</object>
</interface>

